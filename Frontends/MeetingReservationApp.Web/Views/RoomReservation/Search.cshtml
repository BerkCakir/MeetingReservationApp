@{
    ViewData["Title"] = "Available Rooms For Desired Time Interval";
}
@model List<MeetingReservationApp.Web.Models.RoomReservation.RoomViewModel>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Rooms</h5>
                @if (Model != null)
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Room Name</th>
                                <th>Attendance Capacity</th>
                                <th>Has Chairs</th>
                                <th>Location</th>
                                <th>Operation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.AttendanceCapacity</td>
                                    <td>@item.HasChairs</td>
                                    <td>@item.LocationId</td>
                                    <td>
                                            <a asp-controller="RoomReservation" asp-action="Add" asp-route-id="@item.Id" class="btn btn-success btn-sm">Reserve</a>
                                        </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">

                    </div>
                }
            </div>
        </div>
    </div>
</div>